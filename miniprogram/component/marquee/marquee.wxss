/* component/marquee/marquee.wxss */
@import '../../style/iconfont.wxss';
.marquee{
  width: 100%;
  height: 60rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  padding:0 20rpx;
  border-bottom:1rpx solid #EDEDED
}
.marquee .text{
  position: relative;
  float: left;
  width: 85%;
  height: 100%;
  overflow: hidden;
}
.marquee .textContent{
  position: absolute;
  color: red
}
.marquee icon{
  float: left;
  width: 7%;
  height: 100%;
  font-size: 38rpx;
  color: red;
}